Host *
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    LogLevel ERROR

Host *.cloudapp.azure.com
    UserKnownHostsFile /dev/null
    IdentityFile ~/.ssh/azlinux
    StrictHostKeyChecking no
    User azlinux

Host github
	HostName github.com
	IdentityFile ~/.ssh/id_ed25519
	User git

Host gitlab
    HostName gitlab.com
    IdentityFile ~/.ssh/id_ed25519
    User git
